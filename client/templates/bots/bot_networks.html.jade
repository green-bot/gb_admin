template(name="botNetworks")
  .card-panel.green.lighten-4
    {{> botRuler }}
    h2 Connections
    table
      thead
        tr
          th Network
          th Handle
          th Keywords
          th 
      tbody
        each addresses
          tr
            td {{ network networkHandleName }}
            td {{ handle networkHandleName }}
            td= keywords
            td
              a.green-text.delete(href='#')
                i.material-icons.left delete
                | Delete
    .section
      .row
        .col.s3.input-field
          select#network.browser-default
            option(value="") Network...
            each availableNetworks
              option(value="{{ name }}") {{ name }}
        .col.s3.input-field
          input#handle(placeholder='handle or phone #')
        .col.s3.input-field
          input#keywords(placeholder='keywords')
        .col.s3.input-field
          a#add-network.btn-floating.waves-effect.waves-light.red
            i.material-icons.left add
