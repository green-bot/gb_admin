template(name='navItems')
  li
    {{> loginButtons}}
  li
    a(href='/dev-tools') Dev Tools
  li
    a(href='/library') Library
  li
    a(href='https://github.com/green-bot/greenbot-core/wiki/{{ wikiName }}') Help

template(name="masterLayout")
  nav.green.darken-2
    .nav-wrapper
      a.brand-logo(href='#!') GreenBot
      a.button-collapse(href='#', data-activates='mobile-demo')
        i.material-icons menu
      ul.right.hide-on-med-and-down
        {{> navItems }}
      ul#mobile-demo.side-nav
        {{> navItems }}
  .row
    .col.s2
      {{> botSidebar}}
    .col.s10
      {{> yield}}
