template(name="scriptsSidebar")
  ul.collection
    each scripts
      li
        a.collection-item.teal.script-item(href='/scripts/{{_id}}' class=activeStyle) 
          i.material-icons(style='line-height:inherit;vertical-align:bottom') person_outline
          {{ name }}
  .center-align
    a.btn-floating.btn-large.orange.add-script(href='/scripts/new')
      i.large.material-icons add
