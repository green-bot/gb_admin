template(name='scriptManualInstall')
  .col.s12.m4
    .card.green.darken-2.script-card
      .card-content.white-text.script-card-content
        .row
          .left.card-title Install A Script
        .row
          p
            | To install a locally developed bot, provide the directory name of the 
            | package here. Or, to install one available on npmjs.com, 
            | specify the package name.
        .row
          .input-field.white-text
            input.package(type='text' name='name')
            label.active.white-text(for='name') NPM directory or package name
      .card-action
        .row.center-align
          a.btn.waves-effect.waves-green.deep-orange.install-script
            | Install
    .col.s6
      #desc.modal.modal-fixed-footer
        .modal-content
          h4 {{ name }}
          |       
          {{{ desc_markdown }}}
        .modal-footer
          a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') 
            | Close
